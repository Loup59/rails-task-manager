<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<input type="checkbox" disabled <%= "checked" if @task.completed %>>

<%= link_to "Edit", edit_path %>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>

<%= link_to "Back to list", tasks_path %>
