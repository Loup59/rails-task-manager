<%= form_with model: @task do |f| %>
  <div style="margin: 10px">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div style="margin: 10px">
    <%= f.label :details %>
    <%= f.text_field :details %>
  </div>
